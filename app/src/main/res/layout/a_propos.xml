<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:weightSum="1">


<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Goople Maps "
    android:id="@+id/googleMap"
    android:background="@android:color/darker_gray"
    android:textSize="25dp"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textAlignment="center"
    android:layout_margin="20sp" />

<TextView
    android:id="@+id/map"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Google Inc. 2014"
    android:textColor="#000000"

    android:textSize="20dp"
    android:layout_gravity="center_horizontal" />



<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Version"
    android:id="@+id/version"
    android:background="@android:color/darker_gray"
    android:textSize="25dp"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textAlignment="center"
    android:layout_margin="20sp" />


<TextView
    android:id="@+id/textProg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1.00"
    android:textColor="#000000"
    android:textSize="20dp"
    android:layout_gravity="center_horizontal" />


<TextView
    android:id="@+id/copiright"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Copyright ©"
    android:textColor="#000000"
    android:textAlignment="center"

    android:textSize="25dp"
    android:layout_margin="20sp"
    android:background="@android:color/darker_gray"

    android:layout_gravity="center_horizontal" />


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Cette application est la propriété de Mme Azzag. Toute reproduction ou copie de son code source pourra faire l'objet de poursuites judiciaires."
    android:id="@+id/textView6"
    android:textColor="#000000"
    android:textAlignment="center"
    android:textSize="20dp"
    android:layout_margin="10dp" />

</LinearLayout>